@model QuizApp.viewModels.QuizCategoryViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Quiz", FormMethod.Post))
{
    @Html.ValidationSummary(true,null,new { @class="text-danger"})
<div class="container">
    <div class="form-group first">
        @Html.LabelFor(model => model.CandidateName)
        @Html.TextBoxFor(model => model.CandidateName, new { @class = "form-control", autocomplete = "off", placeholder = "your name" })
        @Html.ValidationMessageFor(model => model.CandidateName, null, new { @class = "text-danger" })
    </div>
    <div class="form-group last mb-3">
        @Html.LabelFor(model => model.CategoryId)
        @Html.DropDownListFor(model => model.CategoryId,Model.ListCategory, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CategoryId, null, new { @class = "text-danger" })
    </div>
    <input type="submit" value="Sign In" class="btn btn-block btn-primary">
</div>
}
