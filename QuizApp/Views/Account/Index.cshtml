
@model QuizApp.Models.Admin

<br />
<br />
<br />
<br />
<div class="container">
    <div class="col-md-7">
        <h3>Login to <strong>QuizApp</strong></h3>
        <form action="Index" method="post">
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
            <div class="form-group first">
                @Html.LabelFor(model => model.UserName)
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", autocomplete = "off", placeholder = "your email" })
                @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group last mb-3">
                @Html.LabelFor(model => model.UserPassword)
                @Html.TextBoxFor(model => model.UserPassword, new { @class = "form-control", autocomplete = "off", placeholder = "your password" })
                @Html.ValidationMessageFor(model => model.UserPassword, null, new { @class = "text-danger" })
            </div>
            <input type="submit" value="Sign In" class="btn btn-block btn-primary">

        </form>
    </div>
</div>



@section scripts{

    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/main.js"></script>

}